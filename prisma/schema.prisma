// OMGsystems Database Schema
// Comprehensive schema for multi-tenant SaaS platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLoginAt DateTime?

  // MFA fields
  mfaEnabled   Boolean   @default(false)
  mfaSecret    String?
  backupCodes  Json      @default("[]")

  // Relations
  memberships UserMembership[]
  sessions    Session[]
  accounts    Account[]
  orders      Order[]
  projects    Project[]
  tasks       Task[]
  messages    Message[]
  documents   Document[]  // Added documents relation
  comments    Comment[]
  tickets     Ticket[]
  auditLogs   AuditLog[]
  betaInvitations BetaInvitation[]
  betaInvitedBy   BetaInvitation[] @relation("BetaInvitedBy")
  feedback        Feedback[]
  assignedFeedback Feedback[] @relation("FeedbackAssigned")
  launchPlans     LaunchPlan[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Organization & Membership
model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  displayName String?  // Added for admin settings
  description String?
  logo        String?
  website     String?
  industry    String?
  size        String?
  timezone    String?  // Added for admin settings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  memberships     UserMembership[]
  projects        Project[]
  orders          Order[]
  invoices        Invoice[]
  attachments     Attachment[]
  secureDocs      SecureDoc[]
  documents       Document[]     // Added document model
  subscriptions   Subscription[] // Added subscription model
  tickets         Ticket[]
  webhookEndpoints WebhookEndpoint[]
  usageEvents     UsageEvent[]
  auditLogs       AuditLog[]
  featureFlags    FeatureFlag[]  // Added feature flags relation
  betaInvitations BetaInvitation[]
  feedback        Feedback[]

  @@map("organizations")
}

model UserMembership {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(CLIENT)
  status         String   @default("active") // active, suspended, pending
  joinedAt       DateTime @default(now())
  createdAt      DateTime @default(now())  // Added missing field
  updatedAt      DateTime @updatedAt

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("user_memberships")
}

enum Role {
  ADMIN
  STAFF
  CLIENT
}

// Products & Orders
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  category    String   // CRM, SecureVault, IndustryIQ, ContentEngine
  features    Json?    // Array of features
  pricing     Json?    // Pricing tiers and plans
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  orderItems OrderItem[]

  @@map("products")
}

model Order {
  id             String      @id @default(cuid())
  userId         String
  organizationId String
  status         OrderStatus @default(PENDING)
  total          Float
  currency       String      @default("USD")
  stripePaymentIntentId String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id])
  organization Organization @relation(fields: [organizationId], references: [id])
  items      OrderItem[]
  invoices   Invoice[]

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int     @default(1)
  price     Float

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
  REFUNDED
}

// Invoicing & Billing
model Invoice {
  id             String        @id @default(cuid())
  organizationId String
  orderId        String?
  number         String        @unique
  status         InvoiceStatus @default(DRAFT)
  amount         Float
  currency       String        @default("USD")
  dueDate        DateTime?
  paidAt         DateTime?
  stripeInvoiceId String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  order        Order?       @relation(fields: [orderId], references: [id])

  @@map("invoices")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

// Project Management
model Project {
  id             String        @id @default(cuid())
  organizationId String
  userId         String
  name           String
  description    String?
  status         ProjectStatus @default(PLANNING)
  priority       String        @default("medium") // low, medium, high, urgent
  startDate      DateTime?
  dueDate        DateTime?
  completedAt    DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
  tasks        Task[]
  messages     Message[]
  attachments  Attachment[]

  @@map("projects")
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  REVIEW
  COMPLETED
  ON_HOLD
  CANCELLED
}

model Task {
  id          String     @id @default(cuid())
  projectId   String
  userId      String
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    String     @default("medium")
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user     User      @relation(fields: [userId], references: [id])
  comments Comment[]

  @@map("tasks")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
}

// Communication
model Message {
  id         String   @id @default(cuid())
  projectId  String
  userId     String
  content    String
  type       String   @default("message") // message, update, announcement
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@map("messages")
}

model Comment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@map("comments")
}

// File Management
model Attachment {
  id             String   @id @default(cuid())
  organizationId String
  projectId      String?
  name           String
  originalName   String
  mimeType       String
  size           Int
  secureVaultId  String   // Reference to SecureVault file
  url            String?  // Signed URL for access
  expiresAt      DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  project      Project?     @relation(fields: [projectId], references: [id])

  @@map("attachments")
}

model SecureDoc {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?
  secureVaultId  String   // Reference to SecureVault file
  url            String?  // Signed URL for access
  expiresAt      DateTime?
  isPublic       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])

  @@map("secure_docs")
}

// Support & Ticketing
model Ticket {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  subject        String
  description    String
  status         TicketStatus @default(OPEN)
  priority       String       @default("medium")
  category       String?      // technical, billing, feature_request
  assignedTo     String?
  resolvedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@map("tickets")
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// Webhooks & Integrations
model WebhookEndpoint {
  id             String   @id @default(cuid())
  organizationId String
  url            String
  eventTypes     String // Comma-separated event types
  secret         String
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  webhookEvents WebhookEvent[]

  @@map("webhook_endpoints")
}

model WebhookEvent {
  id               String   @id @default(cuid())
  webhookEndpointId String
  eventType        String
  payload          Json
  status           String   @default("pending") // pending, sent, failed
  attempts         Int      @default(0)
  lastAttemptAt    DateTime?
  createdAt        DateTime @default(now())

  // Relations
  webhookEndpoint WebhookEndpoint @relation(fields: [webhookEndpointId], references: [id], onDelete: Cascade)

  @@map("webhook_events")
}

// Usage Tracking & Analytics
model UsageEvent {
  id             String   @id @default(cuid())
  organizationId String
  eventType      String   // document_uploaded, api_call, storage_used
  metadata       Json?
  value          Float? // For metering (storage size, API calls, etc.)
  createdAt      DateTime @default(now())

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])

  @@map("usage_events")
}

// Audit & Compliance
model AuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  action         String   // user_login, role_changed, invoice_created, etc.
  resourceType   String?  // user, project, invoice, etc.
  resourceId     String?
  metadata       Json?
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

// Demo Requests
model DemoRequest {
  id          String   @id @default(cuid())
  appSlug     String   // "crm" or "securevault-docs"
  industry    String?
  answers     Json?    // Form answers
  bookedAt    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  leadId      String?
  lead        Lead?    @relation(fields: [leadId], references: [id])

  @@map("demo_requests")
}

// Lead Management
model Lead {
  id        String   @id @default(cuid())
  name      String?  // Added name field
  contact   String?
  email     String?
  orgName   String?
  company   String?  // Added missing field
  source    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  demoRequests DemoRequest[]

  @@map("leads")
}

// Subscription Management
model Subscription {
  id                String             @id @default(cuid())
  organizationId    String
  name              String
  status            SubscriptionStatus @default(TRIAL)
  plan              String
  amount            Float
  currency          String             @default("USD")
  interval          String             // monthly, yearly
  startDate         DateTime           @default(now())  // Added missing field
  endDate           DateTime?          // Added missing field
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd Boolean            @default(false)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])

  @@map("subscriptions")
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELLED
  UNPAID
}

// Document Management (for portal)
model Document {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  name           String
  url            String
  size           Int
  mimeType       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@map("documents")
}

// System Settings
model SystemSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  type        String   @default("string") // string, boolean, number, json
  description String?  // Added missing field
  createdAt   DateTime @default(now())  // Added missing field
  updatedAt   DateTime @updatedAt  // Added missing field

  @@map("system_settings")
}

// Feature Flags
model FeatureFlag {
  id             String  @id @default(cuid())
  organizationId String?
  key            String
  value          Boolean @default(false)
  isGlobal       Boolean @default(false)
  isEnabled      Boolean @default(false)  // Added missing field
  name           String?  // Added missing field
  description    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization? @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, key])
  @@map("feature_flags")
}

// Beta Testing
model BetaInvitation {
  id             String   @id @default(cuid())
  email          String
  name           String
  company        String
  role           String   @default("client") // admin, client
  betaTier       String   @default("internal") // internal, friendly, public
  notes          String?
  invitedBy      String
  organizationId String
  status         String   @default("pending") // pending, accepted, declined, expired
  invitationToken String  @unique
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user            User?         @relation(fields: [invitedBy], references: [id])
  organization    Organization  @relation(fields: [organizationId], references: [id])
  invitedByUser   User          @relation("BetaInvitedBy", fields: [invitedBy], references: [id])

  @@map("beta_invitations")
}

// Feedback System
model Feedback {
  id                    String   @id @default(cuid())
  organizationId        String
  userId               String
  category             String   // ui-ux, performance, features, bug, suggestion, other
  rating               Int      // 1-5 star rating
  feedback             String
  page                 String?  // Which page the feedback was submitted from
  userAgent            String?
  browserInfo          String?
  featureRequest       Boolean  @default(false)
  bugReport            Boolean  @default(false)
  improvementSuggestion Boolean @default(false)
  status               String   @default("new") // new, in_progress, resolved, closed
  priority             String   @default("medium") // low, medium, high, urgent
  assignedTo           String?  // Admin user assigned to handle this feedback
  resolution           String?  // How the feedback was resolved
  resolvedAt           DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
  assignedUser User?        @relation("FeedbackAssigned", fields: [assignedTo], references: [id])

  @@map("feedback")
}

// Launch Management
model LaunchPlan {
  id                String   @id @default(cuid())
  name              String
  description       String?
  launchDate        DateTime
  rolloutPercentage Int      @default(25) // 10, 25, 50, 100
  status            String   @default("draft") // draft, scheduled, in_progress, completed, cancelled
  notes             String?
  createdBy         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  createdByUser User @relation(fields: [createdBy], references: [id])

  @@map("launch_plans")
}

// AI Agents Quote Requests
model QuoteRequest {
  id               String   @id @default(cuid())
  fullName         String
  companyName      String
  email            String
  industry         String
  agentRole        String
  timeline         String?
  additionalDetails String?
  status           String   @default("NEW") // NEW, CONTACTED, QUOTED, CONVERTED, LOST
  source           String   @default("WEBSITE") // WEBSITE, AI_AGENTS_PAGE, REFERRAL, etc.
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@map("quote_requests")
}
