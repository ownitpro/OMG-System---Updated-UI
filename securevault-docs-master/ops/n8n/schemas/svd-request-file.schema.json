{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Request File Payload",
  "type": "object",
  "required": ["orgId", "recipientEmail", "label"],
  "properties": {
    "orgId": {"type": "string"},
    "recipientEmail": {"type": "string", "format": "email"},
    "recipientName": {"type": ["string", "null"]},
    "label": {"type": "string"},
    "pin": {"type": ["string", "null"]},
    "expiryDays": {"type": ["integer", "null"], "minimum": 1, "maximum": 30}
  }
}

