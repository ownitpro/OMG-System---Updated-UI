{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contact Sales Payload",
  "type": "object",
  "required": ["fullName", "email", "company", "useCase", "region"],
  "properties": {
    "fullName": {"type": "string", "minLength": 1},
    "email": {"type": "string", "format": "email"},
    "company": {"type": "string"},
    "phone": {"type": ["string", "null"]},
    "useCase": {"type": "string"},
    "planInterest": {"type": "string", "enum": ["personal", "business", "undecided"]},
    "region": {"type": "string"},
    "source": {"type": "string", "default": "contact-sales"}
  }
}

