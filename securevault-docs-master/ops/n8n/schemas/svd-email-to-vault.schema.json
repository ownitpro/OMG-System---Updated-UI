{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Email to Vault (Phase 1)",
  "type": "object",
  "required": ["to", "from", "subject", "text", "attachments"],
  "properties": {
    "to": {"type": "string"},
    "from": {"type": "string"},
    "subject": {"type": "string"},
    "text": {"type": "string"},
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "filename": {"type": "string"},
          "contentType": {"type": "string"},
          "contentBase64": {"type": "string"}
        },
        "required": ["filename", "contentBase64"]
      }
    },
    "orgId": {"type": ["string", "null"]},
    "portalId": {"type": ["string", "null"]}
  }
}

